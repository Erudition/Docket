<Page
    class="page"
    navigatingTo="onNavigatingTo"
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Activities"></Label>
    </ActionBar>

    <ListView items="{{ activities }}" itemTap="onItemTap" class="list-group">
        <ListView.itemTemplate>
            <StackLayout orientation="vertical" class="list-group-item">
                <Label text="{{ name }}" textWrap="true"></Label>
                <Label text="{{ excusedUsage }}" textWrap="true"></Label>
            </StackLayout>
        </ListView.itemTemplate>
    </ListView>
</Page>
